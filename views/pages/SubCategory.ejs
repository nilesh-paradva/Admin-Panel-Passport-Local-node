<!DOCTYPE html>
<html lang="en">
<%- include("../compo/head") -%>

<body>
    <!-- [ navigation menu ] start -->
	<%- include("../compo/sidebar") -%>
	<!-- [ navigation menu ] end -->

	<!-- [ Header ] start -->
	<%- include("../compo/header") -%>
	<!-- [ Header ] end -->

    <div class="pcoded-main-container">
		<div class="pcoded-wrapper">
			<div class="pcoded-content">
				<div class="pcoded-inner-content">
					<div class="main-body">
						<div class="page-wrapper">
							<div class="page-header">
								<div class="page-block">
									<div class="row align-items-center justify-content-center">
										<div class="col-md-8">
                                            <form action="/subcategoryAdd" method="post">
                                                <div class="form-group mb-3">
                                                    <label for="categoryId" class="text-black">Select Category :-</label>
                                                    <select name="categoryId" id="categoryId" class="form-select">
                                                        <option value="-1" selected>Select Category</option>
                                                        <% categorydata.map((category) => { %>
                                                            <option value="<%=category._id%>"><%=category.category%></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="subcategory" class="text-black">Add Sub Category :-</label>
                                                    <input type="text" class="form-control" id="subcategory" name="subcategory" placeholder="Enter Your Sub Category">
                                                </div>
                                                <button class="btn btn-primary">Save Sub Category</button>
                                            </form>
                                        </div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

    <%- include("../compo/footer") -%> 
</body>
</html>